{
	"name": "figmagic",
	"description": "Automate the generation of design tokens and specs from your Figma documents. Inspired by Salesforce Theo.",
	"keywords": [
		"figma",
		"figma api",
		"design tokens",
		"tokens",
		"design system",
		"salesforce theo"
	],
	"homepage": "https://www.figmagic.com",
	"version": "1.0.31",
	"author": "Mikael Vesavuori",
	"main": "dist/index.js",
	"license": "MIT",
	"devDependencies": {
		"@rollup/plugin-json": "^4.0.2",
		"@types/jest": "^25.1.1",
		"@types/lodash": "^4.14.149",
		"@types/node-fetch": "^2.5.4",
		"@types/rimraf": "^2.0.3",
		"husky": "^4.2.1",
		"jest": "^25.1.0",
		"prettier": "^1.16.4",
		"pretty-quick": "^2.0.1",
		"rollup": "^1.31.0",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-typescript2": "^0.25.3",
		"ts-jest": "^25.1.0",
		"typescript": "^3.7.5"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"lodash": "^4.17.15",
		"node-fetch": "^2.3.0",
		"rimraf": "^3.0.1",
		"yargs": "^15.1.0"
	},
	"bin": {
		"figmagic": "./dist/index.js"
	},
	"scripts": {
		"build": "rollup -c && chmod u+x dist/index.js",
		"setup": "rm -rf yarn.lock node_modules/ /usr/local/lib/node_modules/figmagic && npm install -g",
		"figmagic": "node ./dist/index",
		"test": "npx jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "echo Running pre-commit linting... && yarn test && pretty-quick --staged && npm --no-git-tag-version version patch && git add package.json"
		}
	}
}
